<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abo.jt.system.dao.SysNoticeDao">

    <sql id="selectNoticeId">
        select id,title,type,content,status,remark,createdUser,modifiedUser,createdTime,modifiedTime
        from sys_notices
    </sql>

    <select id="selectById" resultType="com.abo.jt.system.domain.SysNotice">
        <include refid="selectNoticeId"/>
        where id = #{id}
    </select>
    
    <select id="selectNotices" resultType="com.abo.jt.system.domain.SysNotice">
        <include refid="selectNoticeId"/>
        <where>
            <if test="title!=null and title!=''">
                title like concat("%",#{title},"%")
            </if>
            <if test="createdUser!=null and createdUser!=''">
                and createdUser like concat("%",#{createdUser},"%")
            </if>
            <if test="type!=null and type!=''">
                and type like concat("%",#{createdUser},"%")
            </if>
        </where>
    </select>

    <!-- 基于id执行删除操作 -->
    <delete id="deleteById">
        delete from sys_notices
        <where>
            <if test="array!=null and array.length>0">
                id in <!--(1,2,3,4,5)-->
                <foreach collection="array" open="(" close=")" separator="," item="id">
                    #{id}
                </foreach>
            </if>
            or 1=2
        </where>
    </delete>
    
    <insert id="insertNotice" parameterType="com.abo.jt.system.domain.SysNotice">
        insert into sys_notices
        (title,type,content,status,remark,createdUser,modifiedUser,createdTime,modifiedTime)
        values
        (#{title},#{type},#{content},#{status},#{remark},#{createdUser},#{modifiedUser},#{createdTime},#{modifiedTime})
    </insert>

    <!--更新公告信息-->
    <update id="updateNotice" parameterType="com.abo.jt.system.domain.SysNotice">
        update sys_notices
        set title=#{title},
            content=#{content},
            type=#{type},
            status=#{status},
            remark=#{remark},
            modifiedUser=#{modifiedUser},
            modifiedTime=now()
        where id=#{id}
    </update>

    

</mapper>